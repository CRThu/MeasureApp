<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarrotProtocolCommDemo"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:vm="clr-namespace:CarrotProtocolCommDemo.ViewModel"
        DataContext="{Binding Source={StaticResource Locator},Path=Main}"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
        x:Class="CarrotProtocolCommDemo.MainWindow"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Carrot Protocol Communication Demo"
        Height="450" Width="800">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <TextBox Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding DeviceConfigText}" Height="78" VerticalAlignment="Top" HorizontalAlignment="Left" Width="205" Grid.RowSpan="2"/>
        <TextBox Margin="10,0,0,10" TextWrapping="Wrap" Text="{Binding ScriptText}" HorizontalAlignment="Left" Width="205" Height="315" VerticalAlignment="Bottom" Grid.Row="1"/>
        <ListView ItemsSource="{Binding SessionInstance.Loggers[0].Ds,Mode=OneWay}" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="332,10,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="TIME" Width="120" DisplayMemberBinding="{Binding Time}"/>
                    <GridViewColumn Header="SRC" Width="60" DisplayMemberBinding="{Binding From}"/>
                    <GridViewColumn Header="MSG" Width="240" DisplayMemberBinding="{Binding Packet.Message}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Content="Button" Command="{Binding ConfigCommand}" Margin="220,10,0,0" Height="78" VerticalAlignment="Top" HorizontalAlignment="Left" Width="107" Grid.RowSpan="2"/>
        <Button Content="Button" Command="{Binding SendCommand}" Margin="220,0,0,10" HorizontalAlignment="Left" Width="107" Height="315" VerticalAlignment="Bottom" Grid.Row="1"/>
    </Grid>
</Window>
