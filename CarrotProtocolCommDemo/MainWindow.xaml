<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarrotProtocolCommDemo"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:vm="clr-namespace:CarrotProtocolCommDemo.ViewModel"
        xmlns:v="clr-namespace:CarrotProtocolCommDemo.View"
        DataContext="{Binding Source={StaticResource Locator},Path=Main}"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
        x:Class="CarrotProtocolCommDemo.MainWindow"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Carrot Protocol Communication Demo"
        Height="450" Width="800">
    <Window.Resources>
    </Window.Resources>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding WindowLoadedCommand}"/>
        </i:EventTrigger>
        <i:EventTrigger EventName="Closed">
            <i:InvokeCommandAction Command="{Binding WindowClosedCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <TextBox Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding DeviceConfigText}" HorizontalAlignment="Left" Width="205" Height="95" VerticalAlignment="Top"/>
        <TextBox Margin="10,110,0,0" TextWrapping="Wrap" Text="{Binding ScriptText}" HorizontalAlignment="Left" Width="205" Height="315" VerticalAlignment="Top"/>


        <Button Content="Button" Command="{Binding ConfigCommand}" Margin="220,10,0,0" HorizontalAlignment="Left" Width="107" Height="95" VerticalAlignment="Top"/>
        <Button Content="Button" Command="{Binding SendCommand}" Margin="220,110,0,0" HorizontalAlignment="Left" Width="107" Height="315" VerticalAlignment="Top"/>
        <TabControl Margin="332,0,0,0">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <v:SimpleLogger Margin="3,3,3,3" DataContext="{Binding SessionInstance.Loggers[0]}"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
