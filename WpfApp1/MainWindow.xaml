<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closed="Window_Closed">
    <Grid>
        <GroupBox Header="GPIB Device" HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="407">
            <Grid>
                <Button Name="searchGPIBDevicesButton" Content="Search GPIB Devices" Click="SearchGPIBDevicesButton_Click" HorizontalAlignment="Left" Margin="227,10,0,0" VerticalAlignment="Top" Width="158" Height="23"/>
                <Button Name="openGPIBDeviceButton" Content="Open GPIB Device" Click="OpenGPIBDeviceButton_Click" HorizontalAlignment="Left" Margin="227,38,0,0" VerticalAlignment="Top" Width="158" Height="23"/>
                <ComboBox Name="deviceComboBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="201" Height="23"/>
                <Label Name="deviceNameLabel" Content="No Device Connected." HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Height="23" Width="201"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Simple Communication" HorizontalAlignment="Left" Height="200" Margin="10,127,0,0" VerticalAlignment="Top" Width="407">
            <Grid>
                <Button Name="queryCmdButton" Content="Query" HorizontalAlignment="Left" Margin="227,32,0,0" VerticalAlignment="Top" Width="158" Height="55" Click="QueryCmdButton_Click"/>
                <Button Name="writeCmdButton" Content="Write" HorizontalAlignment="Left" Margin="227,118,0,0" VerticalAlignment="Top" Width="158" Height="23" Click="WriteCmdButton_Click"/>
                <Button Name="readCmdButton" Content="Read" HorizontalAlignment="Left" Margin="227,146,0,0" VerticalAlignment="Top" Width="158" Height="23" Click="ReadCmdButton_Click"/>
                <TextBox Name="writeCmdTextBox" Text="" HorizontalAlignment="Left" Height="51" Margin="10,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201"/>
                <TextBox Name="readCmdTextBox" Text="" HorizontalAlignment="Left" Height="51" Margin="10,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201"/>
                <Label Content="Write Command" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="201"/>
                <Label Content="Read Command" HorizontalAlignment="Left" Margin="10,92,0,0" VerticalAlignment="Top" Width="201"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="3458A GUI Config" Height="317" Margin="422,10,10,0" VerticalAlignment="Top">
            <Grid>
                <TextBox x:Name="GuiConfigLogTextBox" HorizontalAlignment="Left" Height="42" Margin="10,242,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="330"/>
                <GroupBox Header="Basic" HorizontalAlignment="Left" Height="84" Margin="10,10,0,0" VerticalAlignment="Top" Width="330">
                    <Grid>
                        <Button Tag="RESET" Content="复位" Click="BasicGuiConfigButtons_Click" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="80"/>
                        <Button Tag="ID" Content="ID" Click="BasicGuiConfigButtons_Click" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" Width="80"/>
                        <Button Tag="ERR" Content="错误信息" Click="BasicGuiConfigButtons_Click" HorizontalAlignment="Left" Margin="107,10,0,0" VerticalAlignment="Top" Width="80"/>
                        <Button Tag="STB" Content="状态位" Click="BasicGuiConfigButtons_Click" HorizontalAlignment="Left" Margin="107,33,0,0" VerticalAlignment="Top" Width="80"/>
                        <Button Tag="TEMP" Content="机器温度" Click="BasicGuiConfigButtons_Click" HorizontalAlignment="Left" Margin="207,10,0,0" VerticalAlignment="Top" Width="80"/>
                        <Button Tag="LFREQ" Content="工频频率" Click="BasicGuiConfigButtons_Click" HorizontalAlignment="Left" Margin="207,33,0,0" VerticalAlignment="Top" Width="80"/>
                    </Grid>
                </GroupBox>
                <GroupBox Header="测量设置" HorizontalAlignment="Left" Height="138" Margin="10,99,0,0" VerticalAlignment="Top" Width="330">
                    <Grid>
                        <ComboBox SelectedIndex="0" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="163" Height="22">
                            <ComboBoxItem Content="ALL (11 minutes)" Tag="0"/>
                            <ComboBoxItem Content="DCV (1 minute)" Tag="1"/>
                            <ComboBoxItem Content="AC (1 minute)" Tag="2"/>
                            <ComboBoxItem Content="OHMS (10 minutes)" Tag="4"/>
                        </ComboBox>
                        <Button Content="执行自动校准" HorizontalAlignment="Left" Margin="178,10,0,0" VerticalAlignment="Top" Width="130" Height="22"/>
                        <ComboBox SelectedIndex="0" HorizontalAlignment="Left" Margin="10,46,0,0" VerticalAlignment="Top" Width="79" Height="22">
                            <ComboBoxItem Content="Auto" Tag="AUTO"/>
                            <ComboBoxItem Content="100mV" Tag="0.1"/>
                            <ComboBoxItem Content="1V" Tag="1"/>
                            <ComboBoxItem Content="10V" Tag="10"/>
                            <ComboBoxItem Content="100V" Tag="100"/>
                            <ComboBoxItem Content="1kV" Tag="1000"/>
                        </ComboBox>
                        <Button Content="DCV 设置量程/精度" HorizontalAlignment="Left" Margin="178,46,0,0" VerticalAlignment="Top" Width="130" Height="22"/>
                        <ComboBox SelectedIndex="0" HorizontalAlignment="Left" Margin="94,46,0,0" VerticalAlignment="Top" Width="79" Height="22">
                            <ComboBoxItem Content="Default" Tag="0"/>
                            <ComboBoxItem Content="1nV" Tag="0.0000001"/>
                            <ComboBoxItem Content="10nV" Tag="0.000001"/>
                            <ComboBoxItem Content="100nV" Tag="0.00001"/>
                            <ComboBoxItem Content="1uV" Tag="0.0001"/>
                            <ComboBoxItem Content="10uV" Tag="0.001"/>
                        </ComboBox>
                        <Button Content="读量程/精度" HorizontalAlignment="Left" Margin="18,83,0,0" VerticalAlignment="Top" Width="130" Height="22"/>
                        <Button Content="读输出速率" HorizontalAlignment="Left" Margin="172,83,0,0" VerticalAlignment="Top" Width="130" Height="22"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
