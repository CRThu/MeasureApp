      xmlns:viewmodel="clr-namespace:MeasureApp.ViewModel"
      xmlns:root="clr-namespace:MeasureApp"
      d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowDataContext}"
      mc:Ignorable="d" 
      Title="RunTasksPage">
    <Page.Resources>
        <viewmodel:String2NullableDecimalConverter x:Key="String2NullableDecimalConverter"/>
    </Page.Resources>
    <Grid>
        <ListView ItemsSource="{Binding ClassTestBaseCollection}" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="600" Height="200">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="50" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="函数名" Width="100" DisplayMemberBinding="{Binding FuncName}"/>
                    <GridViewColumn Header="传入参数" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding ParamVal,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Width="100"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="返回值" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding ReturnVal,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Width="100"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="运行" Width="70">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Width="50" Content="运行">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <!--<vmc:EventCommandBase Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListView},Path=DataContext.MessageBoxTestEvent}" CommandParameter="{Binding Id}"/>-->
                                            <vmc:EventCommandBase  Command="{Binding MessageBoxTestEvent}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
