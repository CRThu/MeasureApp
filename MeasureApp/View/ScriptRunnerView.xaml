<UserControl x:Class="MeasureApp.View.ScriptRunnerView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:local="clr-namespace:MeasureApp.View"
      xmlns:vm="clr-namespace:MeasureApp.ViewModel"
      xmlns:v="clr-namespace:MeasureApp.View"
      xmlns:vc="clr-namespace:MeasureApp.View.Control"
      xmlns:c="clr-namespace:MeasureApp.View.Converter"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      DataContext="{Binding Source={StaticResource Locator},Path=ScriptRunner}"
      mc:Ignorable="d" d:DesignHeight="400" d:DesignWidth="600">
    <UserControl.Resources>
        <c:BoolToStringConverter x:Key="BoolToStringConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <hc:SimpleStackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="脚本管理" Margin="5,0,5,0" VerticalAlignment="Center"/>
                <Button Content="加载..." Margin="5,0,5,0" Command="{Binding OpenScriptFileCommand}"/>
                <TextBlock Text="{Binding ScriptPath}" Margin="5,0,5,0" VerticalAlignment="Center"/>
            </hc:SimpleStackPanel>
            <Grid Grid.Row="1" Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="默认IO" Margin="5,0,5,0" VerticalAlignment="Center"/>
                <ComboBox Grid.Column="1" ItemsSource="{Binding Context.Devices.Info}" SelectedItem="{Binding DefaultIO}" DisplayMemberPath="Name" Margin="5,0,5,0" Height="30"/>
                <TextBlock Grid.Column="2" Text="默认采集" Margin="5,0,5,0" VerticalAlignment="Center"/>
                <ComboBox Grid.Column="3" ItemsSource="{Binding Context.Devices.Info}" SelectedItem="{Binding DefaultMeasure}" DisplayMemberPath="Name" Margin="5,0,5,0" Height="30"/>
            </Grid>
            <vc:BindableAvalonEditor Grid.Row="2"
                                       Text="{Binding Exec.ScriptCode}"
                                       Margin="3,3,3,3"
                                       ShowLineNumbers="True"
                                       FontFamily="Consolas" FontSize="10pt"
                                       SyntaxHighlighting="XML"/>
            <!--<TextBox Grid.Row="1" Text="{Binding Exec.ScriptCode,UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True" AcceptsTab="True"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                     VerticalContentAlignment="Top" Margin="5,5,5,5"/>-->
            <!--<hc:TabControl Grid.Row="1" ItemsSource="{Binding ScriptViewers}" IsAnimationEnabled="True" ShowCloseButton="True" IsDraggable="True">
                <hc:Interaction.Triggers>
                    <hc:RoutedEventTrigger RoutedEvent="hc:TabItem.Closed">
                        <hc:EventToCommand Command="{Binding ClosedCommand}" PassEventArgsToCommand="True" />
                    </hc:RoutedEventTrigger>
                </hc:Interaction.Triggers>
                <hc:TabControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Header}"/>
                            -->
            <!--<Button Content="Close" Command="{Binding DataContext.ClosedCommand,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type hc:TabControl}}}" CommandParameter="{Binding}"/>-->
            <!--
                        </StackPanel>
                    </DataTemplate>
                </hc:TabControl.ItemTemplate>
                <hc:TabControl.ContentTemplate>
                    <DataTemplate>
                        <Grid Margin="5,5,5,5">
                            <TextBlock Text="{Binding Text}"/>
                        </Grid>
                    </DataTemplate>
                </hc:TabControl.ContentTemplate>
            </hc:TabControl>-->
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <hc:SimpleStackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="间隔" VerticalAlignment="Center" Margin="5,0"/>
                <TextBox Text="{Binding Exec.Interval}" Width="50" Margin="5,0"/>
                <TextBlock Text="毫秒" VerticalAlignment="Center" Margin="5,0"/>
            </hc:SimpleStackPanel>
            <hc:SimpleStackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="当前" VerticalAlignment="Center" Margin="5,0"/>
                <TextBox Text="{Binding Exec.CurrentLine}" Width="50" Margin="5,0"/>
                <TextBlock VerticalAlignment="Center" Margin="5,0">
                    <Run Text="/ "/>
                    <Run Text="{Binding Exec.ScriptLines.Length,Mode=OneWay}"/>
                    <Run Text=" 行"/>
                </TextBlock>
            </hc:SimpleStackPanel>
            <hc:SimpleStackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5">
                <Button Content="{Binding Exec.IsRunning,
                    Converter={StaticResource BoolToStringConverter},
                    ConverterParameter='停止|运行'}"
                    Command="{Binding ScriptRunCommand}"
                    Margin="5,0"/>
                <Button Content="单步"
                    Command="{Binding ScriptRunStepCommand}"
                    Margin="5,0"/>
                <Button Content="重置"
                    Command="{Binding ScriptResetCommand}"
                    Margin="5,0"/>
            </hc:SimpleStackPanel>
            <Grid Grid.Row="3" Margin="0,5">
                
            </Grid>
        </Grid>
    </Grid>
</UserControl>
